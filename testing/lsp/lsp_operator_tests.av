# Type checking tests for all operators
# Each test validates correct type handling

# Arithmetic operators
let add_result = 5 + 3 in
let sub_result = 5 - 3 in
let mul_result = 5 * 3 in
let div_result = 5 / 2 in
let mod_result = 5 % 3 in

# String concatenation
let concat_str = "hello" + " world" in

# List concatenation
let concat_list = [1, 2] + [3, 4] in

# Comparison operators
let gt = 5 > 3 in
let lt = 5 < 3 in
let gte = 5 >= 3 in
let lte = 5 <= 3 in

# Equality operators
let eq = 5 == 5 in
let neq = 5 != 3 in
let str_eq = "hello" == "hello" in
let list_eq = [1, 2] == [1, 2] in

# Boolean logic using logical operators
let bool_and = true && false in
let bool_or = true || false in
let bool_not = !true in

# Compound boolean logic
let compound_bool = (5 > 3) && (2 < 4) in
let complex_bool = (5 > 3) || (2 > 4) && (1 < 3) in

# Type conversion in expressions
let str_to_int = (to_int "42") + 8 in
let int_to_str = concat (to_string 42) " is the answer" in

# All tests passed if no LSP errors reported
true