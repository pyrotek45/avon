# Maybe the password is the sum of all positions when we land on 0?
let initial_state = {position: 50, sum_at_zero: 0} in

let process_line = \state \line
  if is_empty (trim line) then
    state
  else
    let dir = head (to_list line) in
    let amount_str = join (tail (to_list line)) "" in
    let amount = to_int amount_str in
    let current_position = to_int (get state "position") in
    let current_sum = to_int (get state "sum_at_zero") in
    
    let new_position_raw = if dir == "R" then 
      current_position + amount 
    else 
      current_position - amount 
    in
    
    let k = new_position_raw in
    let final_position = if k < 0 then 
      100 + (k % 100)
    else if k > 99 then
      k % 100
    else
      k
    in
    
    # Add position to sum if we landed on 0
    let new_sum = if final_position == 0 then current_sum + final_position else current_sum in
    
    {position: final_position, sum_at_zero: new_sum}
in

let input_lines = readlines @data.txt in
let final_state = fold process_line initial_state input_lines in

trace "Sum of positions at 0" (get final_state "sum_at_zero")
