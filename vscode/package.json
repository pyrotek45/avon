{
  "name": "avon",
  "displayName": "Avon",
  "description": "Syntax highlighting and language support for Avon template language with LSP",
  "version": "0.1.0",
  "publisher": "pyrotek45",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pyrotek45/avon"
  },
  "homepage": "https://github.com/pyrotek45/avon#readme",
  "bugs": {
    "url": "https://github.com/pyrotek45/avon/issues"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "avon",
    "template",
    "configuration",
    "codegen",
    "infrastructure"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#2c3e50",
    "theme": "dark"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:avon"
  ],
  "dependencies": {
    "vscode-languageclient": "^8.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.0.0",
    "typescript": "^4.5.0",
    "@vscode/vsce": "^2.0.0"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "contributes": {
    "languages": [
      {
        "id": "avon",
        "aliases": [
          "Avon",
          "avon"
        ],
        "extensions": [
          ".av"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "avon",
        "scopeName": "source.av",
        "path": "./syntaxes/avon.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "avon",
        "path": "./snippets/avon.json"
      }
    ]
  }
}
